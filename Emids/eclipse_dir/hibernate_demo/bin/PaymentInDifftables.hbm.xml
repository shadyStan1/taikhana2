<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="com.hbm.inheritence.Payment" table="Payment">
	<id name="paymentId" column="pId"><generator class="increment"/></id>
	<property name="amount" column="amount"/>
	
	
	<joined-subclass name="com.hbm.inheritence.CreditCard" table="CreditCard">
	<key column="pId"></key>
	<property name="ccType" column="ccType"/>
	</joined-subclass> 
	
	<joined-subclass name="com.hbm.inheritence.Cheque" table="Cheque">
	<key column="pId"></key>
	<property name="chequeType" column="chequeType"/>
	</joined-subclass> 
	
	</class>
</hibernate-mapping>